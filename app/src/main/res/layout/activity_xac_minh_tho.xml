<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XacMinhThoActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="426dp"
        android:layout_height="95dp"
        android:background="@drawable/imgrectangle2"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:id="@+id/ln1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="0dp"
            android:background="@drawable/goback"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"></Button>

        <TextView
            android:layout_marginHorizontal="80dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center"
            android:text="XÁC MINH THỢ"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"></TextView>
    </LinearLayout>
        <ImageView
            android:id="@+id/imgView"
            android:layout_below="@id/ln1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xacminhthoimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
    <TextView
        android:id="@+id/txtxacminh"
        android:elevation="10dp"
      android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:textSize="13sp"
        android:text="Đã xác minh 0/2"
        android:layout_below="@id/imgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/txtxacminh"
            android:padding="10dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Tài khoản"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa hoàn thành"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/ln3"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/linearLayout2"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/roundertext"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:text="Tài khoản"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/colorRed"
            android:gravity="right"
            android:layout_weight="1"
            android:text="Chưa xác minh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout></androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:id="@+id/ln4"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln3"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Nghề đăng kí"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorLigtYellow"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Đang chờ xét duyêt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"

            android:id="@+id/ln5"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln4"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Tải ảnh chân dung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa xác minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:id="@+id/ln6"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln5"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Tải ảnh CMND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa xác minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="11dp"
            android:id="@+id/ln7"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln6"
            android:padding="10dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Hồ sơ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln8"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln7"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Hợp đồng cá nhân"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa xác minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:id="@+id/ln9"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln8"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Bản lý lịch tư pháp số 1 hoặc giấy xác nhận không tiền án"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorLigtYellow"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Đang chờ xét duyêt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"

            android:id="@+id/ln10"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln9"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Bản photo CMND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa xác minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:id="@+id/ln11"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:elevation="10dp"
            android:layout_below="@id/ln10"
            android:padding="10dp"
            android:background="@drawable/roundertext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Bản Photo hộ khẩu hoặc tạm trú"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Chưa xác minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>














    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>