<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
 <ImageView
     android:id="@+id/imgDoDUng"
     android:layout_width="100dp"
     android:layout_height="100dp"></ImageView>
 <LinearLayout
     android:paddingLeft="10dp"
     android:orientation="vertical"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
  <TextView
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"
      android:textSize="18sp"
      android:id="@+id/txtnamedovat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"></TextView>
  <LinearLayout
      android:layout_weight="1"

      android:paddingTop="20dp"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
 <TextView
     android:paddingRight="2dp"
     android:id="@+id/txtsokilomet"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"></TextView>
 <ImageView
     android:paddingRight="4dp"
     android:background="@drawable/place_marker"
     android:layout_width="20dp"
     android:layout_height="20dp"></ImageView>
   <ImageView
       android:layout_marginRight="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:paddingRight="6dp"
       android:background="@drawable/icon_dot"
       android:layout_width="5dp"
       android:layout_height="5dp"></ImageView>
   <TextView
       android:text="323"
       android:id="@+id/txtsotho"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"></TextView>
   <ImageView
       android:background="@drawable/icon_worker"
       android:layout_width="20dp"
       android:layout_height="20dp"></ImageView>
  </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="100dp"
        android:layout_marginVertical="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnAdd"
            android:background="@drawable/icons_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"></Button>
        <Button
            android:id="@+id/btnMap"
            android:layout_marginTop="10dp"
            android:background="@drawable/icons_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"></Button>
    </LinearLayout>


</LinearLayout>
</RelativeLayout>