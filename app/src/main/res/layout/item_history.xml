<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layoutContanier"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bgSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txtTenSanPham"
             android:layout_marginBottom="10dp"
             android:textColor="@color/colorPrimary"
             android:textSize="18sp"
             android:textStyle="bold"
             android:text="Máy giặt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </TextView>
            <TextView
                android:text="Tình trạng sửa chữa"
                android:textColor="#707070"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNgayThang"
                android:textColor="#707070"
                android:textSize="11sp"
                android:layout_marginBottom="14dp"
                android:text="23/5/2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtTinhTrangSua"
                android:text="Đã sửa"
                android:textColor="#34E29F"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
<View android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/layoutContanier"
    android:background="@color/colorGrayText">

</View>

</RelativeLayout>